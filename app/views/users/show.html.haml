.mypage
  .mypage__profile
    .mypage__profile--top
      .currentname
        =current_user.nickname
      .profilesetting
        = link_to "#", class:"profilesetting__content" do
          %i.fas.fa-user-cog
          設定
        = link_to "/cards/new", class:"profilesetting__content" do
          %i.fas.fa-credit-card
          クレジットカード
  -if @item.present?
    %h2.mainProducts__head
      出品一覧
    .productsBox
      .boxlists
        - @item.each do |item|
          .boxlist
            =link_to item_path(item.id) do
              %figure.listimage
                = image_tag item.images.first.image.url, size: "220x150"
                - if item.purchaser_id.present?
                  .items-box-sold
                    .items-box-sold__inner SOLD
              .listbody
                %h3.name
                  = item.name
                .datails
                  %ul
                    %li
                      = item.price
                    %li
                      %i.fas.fa-star
                        =item.likes.count
                  %p
                    (税込)
  -else
    %p 出品した商品はありません
            